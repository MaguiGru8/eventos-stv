<div class="speaker-display-card">
  <div class="speaker-avatar">
    <%= image_tag url_for(user.avatar), width: 35 %>
  </div>
  <div class="speaker-details">
    <p class="name"><%= user.name %></p>
    <p class="text-muted designation"><%= user.designation %></p>
  </div>

  <div class="speaker-social-links d-flex justify-content-center">

    <% if user.personal_website %>
    <a target="_blank" href="<%= complete_url(user.personal_website) %>" class="p-2 text-dark">
      <i class="fas fa-info"></i>
    </a>
    <% end %>

    <% if user.twitter %>
    <a target="_blank" href="<%= twitter_url(user.twitter) %>" class="p-2 text-dark">
      <i class="fab fa-twitter"></i>
    </a>
    <% end %>

    <% if user.github %>
    <a target="_blank" href="<%= complete_url(user.github) %>" class="p-2 text-dark">
      <i class="fab fa-github"></i>
    </a>
    <% end %>

    <% if user.linkedin %>
    <a target="_blank" href="<%= complete_url(user.linkedin) %>" class="p-2 text-dark">
      <i class="fab fa-linkedin-in"></i>
    </a>
    <% end %>

  </div>


</div>