<div id="event-data-form-entity-response-group-rsvp-email">
  <h5>Para: <%= @user.email %></h5>
  <h4>Evento: <%= @event.name %></h4>
  <div class="email-format-container">
    <%= form_with url: send_data_form_entity_response_group_rsvp_email_event_communication_mailers_path(id: @dferg, force: true), method: :post, remote: true do |f| %>
      <fieldset>
        <div class="alert alert-info" role="alert">
          ¡Agregaremos los detalles del evento automáticamente al correo electrónico!
        </div>
        <div class="form-group">
          <%= f.label :subject, 'Asunto' %>
          <%= f.text_field :subject, value: "#{@event.kommunity.name} :: #{@event.name} :: Confirmación", required: true, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= render 'event_details_options', f: f %>
        </div>
        <div class="form-group">
          <%= f.label :message, "Cualquier mensaje adicional (opcional)" %>
          <%= f.text_area :message, :class => "tinymce editor", :rows => 3, :cols => 50 %>
        </div>
        <div class="form-group d-flex justify-content-center">
          <%= f.submit "Enviar correos de confirmación", class: "btn-outline-primary" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>