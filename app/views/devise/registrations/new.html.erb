<% content_for :page_title do %>
  Registro
<% end %>
<h2 class="text-center text-primary">Crear cuenta</h2>
<div class="d-flex justify-content-center gap-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-25 mt-3" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, "Nombre" %><br />
      <%= f.text_field :name, autofocus: true, class: 'form-control mb-2' %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form-control mb-2' %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Contraseña" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mb-2' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-2' %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarse", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= render "devise/shared/links" %>
</div>
