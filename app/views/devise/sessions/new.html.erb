<% content_for :page_title do %>
  Inicio
<% end %>
<h2 class="text-center text-primary"><%= t('modals.welcome_sign_in') %></h2>
<div class="d-flex justify-content-center gap-2">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-25 mt-3" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, t('forms.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-2' %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control mb-2'%>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group mb-2">
        <%= f.check_box :remember_me, class: 'form-check_box' %>
        <%= f.label :remember_me, "Recuérdame", class: 'form-check-label' %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= render "devise/shared/links" %>
</div>
