<% content_for :page_title do %>
  <%= @kommunity.name %> | <%= @event.name %> | Mark Attendance
<% end %>
<section id="auto-attendance" class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-info text-white text-center">
            <h4 class="mb-0"><i class="fas fa-users mr-2"></i><%= @kommunity.name %></h4>
          </div>
          <div class="card-body">
            <h5 class="card-title text-primary mb-3"><%= @event.name %></h5>
            <div class="mb-4">
              <%= render 'events/event_time_display.html.erb', event: @event %>
            </div>
            <%= form_with url: mark_attendance_event_entry_passes_path(event: @event), id: 'mark-attendance-form', method: :patch, remote: true do |f| %>
              <div class="form-group row justify-content-center">
                <div class="col-md-8">
                  <%= f.label :unique_code, "Código único", class: "font-weight-bold" %>
                  <%= f.number_field :unique_code, id: 'unique-code-input', required: true, class: 'form-control text-center form-control-lg', placeholder: "Ingrese su código aquí" %>
                </div>
              </div>
              <div class="form-group row justify-content-center">
                <div class="col-md-8 text-center">
                  <%= f.submit "Marcar asistencia", class: 'btn btn-info btn-block btn-lg mt-3' %>
                </div>
              </div>
              <p class="card-text text-muted mt-4 mb-0">
                <i class="fas fa-info-circle mr-1"></i>
                Por favor ingrese su código único para marcar la asistencia
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    $(document).ready(function() {
      $('#mark-attendance-form input[type=number]').click(function(e){
        setTimeout(function(){ $('#mark-attendance-form input[type=number]')[0].focus()}, 100);
        console.log('clicked');
      });
      $('#mark-attendance-form input[type=number]').trigger('click');
    });
  </script>
</section>