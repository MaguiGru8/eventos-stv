<%= form_with model: @kommunity, scope: :kommunity_form, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>
  <div class="form-group profile-image-input text-center position-relative">
    <div class="existing-logo-image">
      <img id="logo-image-show" alt="Logo " src="<%= @kommunity.logo_image.attached? ? url_for(@kommunity.logo_image) : '' %>">
    </div>
    <%= f.label :logo_image, 'Logo', for: 'logo-image', class: 'custom-file-label' %>
    <%= f.file_field :logo_image, class: 'custom-file-input', id: 'logo-image', onchange: 'showImage(this, "logo-image-show");', accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label:mini_description, 'DescripciÃ³n breve' %>
    <%= f.text_field :mini_description, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :about, 'Sobre el curso' %>
    <%= f.text_area :about, :class => "tinymce editor", :rows => 3, :cols => 50 %>
  </div>
  <div class="form-group">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end  %>