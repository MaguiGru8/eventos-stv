<div class="kommunity-display-card">
  <div class="card">
    <div class="card-header bg-white border-0 d-flex flex-column justify-content-center align-items-center">
      <%= link_to '', kommunity_show_path(kommunity), class: "clickable-card full-size" %>
      <% if kommunity.logo_image.attached? %>
        <div class="kommunity-logo-image">
          <img  alt="<%= kommunity.name %> Logo" src="<%= url_for(kommunity.logo_image)%>">
        </div>
      <% end %>
      <p class="mb-0 mt-1 ">
        <%= kommunity.name %>
      </p>
    </div>
    <div class="card-body text-center">
      <%= link_to '', kommunity_show_path(kommunity), class: "clickable-card full-size" %>
      <p><%= kommunity.mini_description %></p>
    </div>
    <div class="card-footer d-flex flex-wrap justify-content-around">
      <% if !kommunity.nearest_time_events.blank? %>
        <%= link_to '', event_path(kommunity, kommunity.nearest_time_events[0]), class: "clickable-card full-size" %>
        <% if kommunity.nearest_time_events[0].start_time > Time.now %>
          <p class="mb-0"><small>Upcoming:</small> </p>
        <% else %>
          <p class="mb-0"><small>Ãšltima evento realizado </small> </p>
        <% end %>
        <p class="font-weight-bold mb-0">
          <%= kommunity.nearest_time_events[0].name %>
          <span class="badge badge-pill badge-info"><%= kommunity.nearest_time_events[0].start_time.strftime('%d-%B-%Y') %></span>
        </p>
      <% end %>
    </div>
  </div>
</div>